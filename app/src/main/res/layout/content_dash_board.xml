<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.oop.projectgroup10.studychatroom.DashBoard"
    tools:showIn="@layout/app_bar_dash_board">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:text='Welcome to StudyChatRoom. To begin Please click on the burger on the left upper side "burger". '
            android:textSize="18sp"
            tools:layout_editor_absoluteX="37dp"
            tools:layout_editor_absoluteY="34dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:text='To create a new Chat Room choose "Create Chat Room".'
            android:textSize="18sp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="132dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:text='To communicate privately with other members choose "Private Messages". '
            android:textSize="18sp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="132dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp"
            android:text='To manage your settings click on "Settings"'
            android:textSize="18sp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="268dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text='To go to all chat rooms and your chat rooms click on  "Chat Rooms". '
            android:textSize="18sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="210dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="To block an user long press on his/her name on the private message screen."
            android:textSize="18sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="210dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text='To manage or leave a room go to the "Chat Rooms" screen and choose manage. Only Owners and Adminstrators can fully manage the rooms.'
            android:textSize="18sp"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="210dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
